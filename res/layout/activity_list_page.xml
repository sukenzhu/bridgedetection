<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_main_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="#95323d4b"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="返回" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/list_search_bg"
                android:paddingRight="2dp" >

                <EditText
                    android:id="@+id/search_input"
                    android:layout_width="300dp"
                    android:paddingLeft="5dp"
                    android:layout_height="match_parent"
                    android:background="@null" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/search_input"
                    android:src="@drawable/list_search" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#95323d4b"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:src="@drawable/list_gps" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#50000000" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#95323d4b"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:src="@drawable/tongbu" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#80ffffff"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp" >

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#5b9bd1"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ql_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 桥梁[3/136]"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="#40000000" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="#3ea49d"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/qbsc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 全部上传"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="桥涵桩号"
                android:textSize="10dp" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="名称"
                android:textSize="10dp" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="桥涵标识"
                android:textSize="12dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="路线编码"
                android:textSize="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                android:text="桥涵桩号"
                android:textSize="10dp" />
        </LinearLayout>
        
        <ListView
        android:id="@+id/activity_list"
        android:listSelector="#00000000"
        android:divider="#40000000"
        android:dividerHeight="2px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    </LinearLayout>

</LinearLayout>