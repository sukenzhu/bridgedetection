<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="52dp"
    android:layout_height="44dp"
    android:background="@drawable/left_frag_item_bg_selector"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:id="@+id/left_frag_item_line"
        android:layout_height="match_parent"
        android:background="@drawable/red_line_bg" />
    
    

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/left_frag_item_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/demo" />

        <TextView
            android:id="@+id/left_frag_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扶뒬못扶뒬못"
            android:textColor="@drawable/left_frag_item_text_selector"
            android:layout_gravity="center_horizontal"
            android:textSize="8dp" />
    </LinearLayout>
    
    <TextView
        android:id="@+id/left_frag_item_num"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@drawable/circle_text_view_bg"
            android:gravity="center"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="6dp" />

</FrameLayout>