<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_main_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:text="GPS相关设置"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Switch
            android:id="@+id/kaiguan"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:background="#303a48"
            android:text="GPS轨迹："
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/interval"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#303a48"
            android:hint="默认50秒，单位秒"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <Button
            android:id="@+id/save1"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:background="#e76070"
            android:layout_margin="15dp"
            android:onClick="offlineLogin"
            android:text="保存"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <Button
                android:id="@+id/syncGps"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="#e76070"
                android:layout_margin="15dp"
                android:onClick="offlineLogin"
                android:text="同步轨迹"
                android:textColor="#ffffff"
                android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>