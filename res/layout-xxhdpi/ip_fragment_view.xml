<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/list_main_bg"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"
            android:text="地址设置"
            android:textSize="20dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:orientation="vertical">

        <EditText
                android:id="@+id/ip"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="#303a48"
                android:hint="IP"
                android:paddingLeft="5dp"
                android:textColor="#ffffff"
                android:textSize="16dp"/>

        <EditText
                android:id="@+id/port"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="#303a48"
                android:hint="端口"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:textColor="#ffffff"
                android:textSize="16dp"/>

        <Button
                android:id="@+id/save1"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="#e76070"
                android:layout_margin="15dp"
                android:text="保存"
                android:textColor="#ffffff"
                android:textSize="18dp"/>
    </LinearLayout>


    <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp" android:layout_marginTop="20dp" android:background="#333333"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_horizontal">

        <Button
                android:id="@+id/delPng"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="#e76070"
                android:layout_margin="15dp"
                android:text="清空缓存图片"
                android:textColor="#ffffff"
                android:textSize="18dp"/>


        <Button
                android:id="@+id/delVdo"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="#e76070"
                android:layout_margin="15dp"
                android:text="清空缓存视频"
                android:textColor="#ffffff"
                android:textSize="18dp"/>
    </LinearLayout>


</LinearLayout>