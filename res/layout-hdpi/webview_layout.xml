<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <WebView android:layout_width="match_parent" android:layout_height="match_parent"
             android:id="@+id/webview" android:layout_weight="1"></WebView>


    <LinearLayout android:layout_width="match_parent" android:layout_height="60dp"
                  android:background="@android:color/darker_gray"
                  android:orientation="horizontal">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center"
                      android:layout_weight="1">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/back"
                       android:src="@drawable/back_selector"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center"
                      android:layout_weight="1">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/forward"
                       android:src="@drawable/forward_selector"/>
        </LinearLayout>


        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center"
                      android:layout_weight="1">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/refresh"
                       android:src="@drawable/refresh_selector"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>